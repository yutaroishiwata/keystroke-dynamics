doctype html
head
  meta(charset="UTF-8")
  meta(name="viewport" content="width=device-width, initial-scale=1.0")
  meta(http-equiv="X-UA-Compatible" content="ie=edge")
  link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous")
  script(type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.1.4/Chart.min.js")
  script(src="js/app.js" type="text/javascript")
  title Keystroke dynamics
body
  .container
    h1 Keystroke dynamics
    ol.list-unstyled
      li 1. Please enter a suitable string for "First dataset"
      li 2. Please enter the same string in "Second dataset"
    form
      .row
        .col-8
          #firstDataset.form-group
            h5 First dataset
            .form-row
              .col-md-4.mb-3
                label data1
                input#firstData.form-control(type="text" name="password" placeholder="Enter something" autocomplete="off" required="")
              .col-md-4.mb-3
                label data2
                input.form-control(type="text" name="password" placeholder="Enter something" autocomplete="off" required="")
              .col-md-4.mb-3
                label data3
                input.form-control(type="text" name="password" placeholder="Enter something" autocomplete="off" required="")
            #addDatasetArea.form-row
            button#addDataset.btn.btn-secondary(type="button") add dataset
            button#insert.btn.btn-primary(type="button") Insert
          #secondDataset.form-group
            .form-group
              h5 Second dataset
              input#secondData.form-control(type="mext" name="passwordConfirm" placeholder="Enter the same string" required="" disabled="")
              small#caution2.form-text.text-muted
            button#compare.btn.btn-primary(type="button" disabled="") Comparison
        .col-4
          .card.bg-light.mb-3
            .card-header Result
            .card-body
              p.card-title Probability of being himself / herself
              h4#result.card-text --
    canvas#myChart
